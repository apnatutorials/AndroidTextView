<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apnatutorials.androidtextview.MainActivity">

    <TextView
        android:id="@+id/tvAutoLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:autoLink="all"
        android:linksClickable="true"
        android:text="@string/autolink_demo"
        android:textSize="16sp" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_lock_black_24dp"
        android:gravity="center"
        android:text="@string/icon_right"
        android:textSize="16sp" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/ic_account_box_black_24dp"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:text="@string/icon_left"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvTextStyling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvClickableSpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvDataTruncation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/data_truncation_demo"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvHtmlFormatting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:linksClickable="true"
        android:textSize="16sp"

        />

</LinearLayout>
